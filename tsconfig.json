{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
