{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2021",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["es2021", "DOM"],
    "rootDir": "./",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "dist/**/*"]
}
